@{
    ViewData["Title"] = "Home Page";
    
}

<body >
    <h1>@ViewData["Greeting"]</h1>
    <p>The time is @ViewData["Time"] on @ViewData["Day"], @ViewData["Month"] @ViewData["Num"], @ViewData["Year"] </p>
    <p>@ViewData["nextYear"] more days until 2018</p>

    <a asp-action="ExamplePerson"  class="btn btn-info">See a sample person</a>
    <a asp-action="ShowList"  class="btn btn-info">See a list of people</a>
    <a asp-action="AddPerson"  class="btn btn-info">Add a person</a>

</body>