@model Lab.Models.Person
@{
    ViewData["Title"] = "Person";
}
<html>
<body>
    <h1>Person</h1>
    <div>First Name: @Model.FirstName</div>
    <div>Last Name: @Model.LastName</div>
    <div>Birth Date: @Model.BirthDate.ToString("MM/dd/yyyy")</div>
    <div>Age: @Model.Age.ToString()</div>
    <br />
    <a asp-action="EditPerson" asp-route-id="@Model.PersonID" class="btn btn-info">Edit this person</a>
    <a asp-action="RemovePerson" asp-route-id="@Model.PersonID" class="btn btn-info">Remove this person</a>
</body>
</html>
